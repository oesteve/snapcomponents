<div>

    {% if not app.user %}
        <div class="text-sm text-muted">
            <a class="btn btn-primary" href="{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}">
                <span>Login with Github</span>
            </a>
        </div>
    {% else %}
        <button id="userDropdownButton" data-dropdown-toggle="userDropdown"
                class="p-2 flex flex-row gap-2 cursor-pointer hover:bg-muted rounded transition-colors items-center"
                type="button">
            {% if app.user.picture %}
                <img src="{{ app.user.picture }}" alt="User picture" class="rounded h-6"/>
            {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-user-round-icon lucide-user-round h-6">
                    <circle cx="12" cy="8" r="5"/>
                    <path d="M20 21a8 8 0 0 0-16 0"/>
                </svg>
            {% endif %}

            <span class="text-sm">
            {{ app.user.email }}
        </span>
        </button>

        <!-- Dropdown menu -->
        <div id="userDropdown" class="z-10 hidden rounded border shadow-sm text-sm">
            <ul aria-labelledby="userDropdownButton">
                <li class="hover:bg-secondary p-4 py-2">
                    <a class="dropdown-item flex flex-row gap-3 items-center"
                       href="{{ path('app_admin') }}">

                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="lucide lucide-settings-icon lucide-settings size-4">
                            <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
                            <circle cx="12" cy="12" r="3"/>
                        </svg>

                        {{ 'user_dropdown.admin' | trans }}
                    </a>
                </li>
                <li class="hover:bg-secondary p-4 py-2">
                    <a class="dropdown-item flex flex-row gap-3 items-center"
                       href="/logout">

                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="lucide lucide-log-out-icon lucide-log-out size-4">
                            <path d="m16 17 5-5-5-5"/>
                            <path d="M21 12H9"/>
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        </svg>

                        {{ 'user_dropdown.logout' | trans }}
                    </a>
                </li>
            </ul>
        </div>
    {% endif %}
</div>
